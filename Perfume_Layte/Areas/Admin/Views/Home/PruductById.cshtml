@using PerfumeLayte.Application.Services.Product.Querises.GetProductByID;
@model GetProductByID
@{
	ViewData["Title"] = "جزییات";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="/assets/Public/@Model.ScrMain" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <div class="row g-2">
                        @foreach(var img in Model.src)
                        {
                            <div class="col-3">
                                <img src="/assets/Public/@img" class="img-thumbnail" alt="Thumbnail 1">
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="h2 mb-3">@Model.Name</h1>
            <div class="mb-3">
                <span class="h4 me-2">@Model.Price</span>
                @if(Model.isVisite){
                    <span class="badge bg-danger ms-2">25% OFF</span>
                }
            </div>

           @*  <div class="mb-3">
                <div class="d-flex align-items-center">
                    <div class="text-warning me-2">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                    <span class="text-muted">(128 reviews)</span>
                </div>
            </div> *@

            <p class="mb-4">@Html.Raw(Model.text)</p>

            <!-- Color Selection -->
         

            <!-- Quantity -->
            <div class="mb-4">
                <div class="d-flex align-items-center">
                    <label class="me-2">مانده در انبار:</label>
                     <h4>1500</h4>
                </div>
            </div>
            <div class="mb-4">
                <div class="d-flex align-items-center">
                    <label class="me-2">دسته</label>
                    <span>@Model.categury</span>
                </div>
            </div>

            <!-- Actions -->
          

            <!-- Additional Info -->
            <p class="mb-4">@Html.Raw(Model.feature)</p>
            
        </div>
    </div>
</div>