@using PerfumeLayte.Application.Services.User.Commands.Register;
@model SendFormUserRegister;
@{
    ViewData["Title"] = "ثبت نام";
}
<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </div>
</nav>

<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('~/assets/Public/Mens-Cologne-23-perfume.jpg')">
    <div class="container">
        <div class="form-box">
            <div class="form-tab">
                <ul class="nav nav-pills nav-fill" role="tablist">
                    <li class="nav-item">
                        @ViewData["Title"]
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="registers-2" role="tabpanel" aria-labelledby="register-tab-2">
                        <form asp-controller="Register" asp-action="Register" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.FullName" for="register-email-2" ></label>
                                <input asp-for="@Model.FullName" class="form-control" id="register-email-2">
                                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Mobile" for="register-password-2"></label>
                                <input asp-for="@Model.Mobile" type="password" class="form-control" id="register-password-2">
                                <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="@Model.Password" for="register-password-2"></label>
                                <input asp-for="@Model.Password" type="password" class="form-control" id="register-password-2">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="@Model.RePassword" for="register-password-2"></label>
                                <input asp-for="@Model.RePassword" type="password" class="form-control" id="register-password-2">
                                <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
                            </div>


                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>@ViewData["Title"]</span>
                                    <i class="icon-long-arrow-left"></i>
                                </button>
                            </div>
                            <div class="custom-control custom-checkbox">
                                <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="LoginUser" asp-controller="Login">  حساب کاربری دارید؟</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}











